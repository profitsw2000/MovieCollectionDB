<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/itemHorizontalRecyclerViewContainer"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/horizontalRecyclerItemTextView"
        android:layout_width="@dimen/horizontal_recycler_view_width"
        android:layout_height="@dimen/horizontal_recycler_text_height"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_margin="@dimen/horizontal_recycler_view_margin"
        android:background="@android:color/darker_gray"
        android:padding="@dimen/horizontal_recycler_text_padding"
        android:text="TextView"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/movieDescriptionImage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/movieDescriptionImage"
        android:layout_width="@dimen/horizontal_recycler_view_width"
        android:layout_height="@dimen/horizontal_recycler_image_height"
        android:layout_margin="@dimen/horizontal_recycler_view_margin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/horizontalRecyclerItemTextView" />

</androidx.constraintlayout.widget.ConstraintLayout>